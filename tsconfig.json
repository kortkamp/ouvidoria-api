{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,                                 
    "strictPropertyInitialization": false,        
    "typeRoots": ["./src/@types", "./node_modules/@types"],                             
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
                               
    "outDir": "./dist",
    "rootDir": "./src",
 
    "esModuleInterop": true,                        
    
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },

  "include": [
    "src"
  ]
}
